    }
  },
  "version": "1.0",
  "frameworkVersion": "2.0",
  "domainWhitelist": [
    "platform.cloud.coveo.com"
  ],
  "parameters": [
    {
      "name": "organizationId",
      "type": "text",
      "required": true
    },
    {
      "name": "apiKey",
      "type": "password",
      "required": true
    },
    {
      "name": "insightPanelFieldsAllowlist",
      "type": "text",
      "required": false
    },
    {
      "name": "insightPanelFieldsBlocklist",
      "type": "text",
      "required": false
    },
    {
      "name": "agentFullSearchHubName",
      "type": "text",
      "required": true
    },
    {
      "name": "agentInsightPanelHubName",
      "type": "text",
      "required": true
    },
    {
      "name": "agentTicketPanelHubName",
      "type": "text",
      "required": true
    }
  ]
