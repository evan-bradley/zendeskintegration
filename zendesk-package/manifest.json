{
  "name": "Coveo for Zendesk",
  "author": {
    "name": "Coveo Solutions Inc.",
    "email": "zendesk@coveo.com",
    "url": "https://www.coveo.com/zendesk"
  },
  "defaultLocale": "en",
  "private": true,
  "signedUrls": true,
